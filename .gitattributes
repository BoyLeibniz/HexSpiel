# Normalize all text files to LF (Unix style)
* text=auto eol=lf

# Force LF for common Unity asset types
*.cs       text eol=lf
*.shader   text eol=lf
*.cginc    text eol=lf
*.txt      text eol=lf
*.json     text eol=lf
*.xml      text eol=lf
*.asmdef   text eol=lf
*.uxml     text eol=lf
*.uss      text eol=lf
*.yaml     text eol=lf

# Unity-specific YAML-based files
*.meta     text eol=lf
*.unity    text eol=lf
*.prefab   text eol=lf
*.asset    text eol=lf
*.mat      text eol=lf

# Binary files (should not be normalized or diffed)
*.png      binary
*.jpg      binary
*.fbx      binary
*.mp3      binary
*.wav      binary
*.ogg      binary
*.ttf      binary
*.dll      binary
*.exe      binary
*.so       binary
*.bundle   binary

# Prevent .gitattributes itself from being misinterpreted
.gitattributes text eol=lf
